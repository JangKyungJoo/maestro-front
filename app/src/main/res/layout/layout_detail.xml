<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtTitle_detail"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="30dp"/>
        <Space android:layout_width="match_parent" android:layout_height="8dp" />
        <TextView
            android:id="@+id/txtTimestamp_detail"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:textSize="12dp" android:textColor="#A0A0A0"/>
    </LinearLayout>
    <Space android:layout_width="match_parent" android:layout_height="24dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/detail_linear">
            <TextView
                android:id="@+id/txtContent_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollHorizontally="false"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_img"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
